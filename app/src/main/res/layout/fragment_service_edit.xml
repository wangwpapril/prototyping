<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.swishlabs.prototyping.fragment.ServiceEditFragment">

    <RelativeLayout
        android:id="@+id/offer_post_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/button_container"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/offer_post_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Post Your Offering"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/offer_post_label"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                >

                <RelativeLayout
                    android:id="@+id/service_title_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/service_title_label"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Service Title:"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        />

                    <com.swishlabs.prototyping.customViews.ClearEditText
                        android:id="@+id/service_title_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/service_title_label"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/rounded_border_white"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>


</FrameLayout>
