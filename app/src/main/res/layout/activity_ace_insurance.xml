<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swishlabs.intrepid_android.activity.AceInsuranceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        android:transitionName="actionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACE Insurance"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>



    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:src="@drawable/ace_logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/travel_smart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:paddingTop="0dip"
        android:gravity="center_horizontal"
        android:text="Which service would you like to view?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall" />



    <Button
        android:id="@+id/butAceView"
        android:layout_gravity="center"
        android:text="ACE Worldview"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:longClickable="false"
        android:clickable="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/travel_smart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/butPdf"
        android:layout_gravity="center"
        android:text="ACE Information"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:longClickable="false"
        android:clickable="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/butAceView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textAlignment="center" />

    <include
        android:layout_width="match_parent"
        android:layout_height="25dp"
        layout="@layout/drawer_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
    </include>


</RelativeLayout>
