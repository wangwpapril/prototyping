<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingTop="16dp"
        android:elevation="4dp"
        android:transitionName="actionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/inputLayout"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/toolbar">


        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="left"
            android:hint="FIRST NAME"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="#00000000"
            android:inputType="text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/firstNameEditText"
            android:layout_marginRight="20dp" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:gravity="left"
            android:textColorHint="@color/white"
            android:hint="LAST NAME"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="#00000000"
            android:inputType="text"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/firstNameEditText"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

        </EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/lastNameEditText"
            android:layout_marginRight="20dp" />


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="left"
            android:hint="EMAIL"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="#00000000"
            android:inputType="textEmailAddress"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/lastNameEditText"
            android:layout_marginRight="20dp">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/emailEditText"
            android:layout_marginRight="20dp" />

        <AutoCompleteTextView
            android:id="@+id/countryEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:maxLines="1"
            android:completionThreshold="1"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="left"
            android:hint="COUNTRY"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/emailEditText"
            android:layout_marginRight="20dp">

        </AutoCompleteTextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/countryEditText"
            android:layout_marginRight="20dp" />


        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="left"
            android:hint="USERNAME"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="text"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/countryEditText"
            android:layout_marginRight="20dp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/userNameEditText"
            android:layout_marginRight="20dp" />


        <EditText
            android:id="@+id/PasswordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="left"
            android:hint="PASSWORD"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="textPassword"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/userNameEditText"
            android:layout_marginRight="20dp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/PasswordEditText"
            android:layout_marginRight="20dp" />

        <EditText
            android:id="@+id/policyNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="left"
            android:hint="POLICY NUMBER"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="number"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/PasswordEditText"
            android:layout_marginRight="20dp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/policyNumberEditText"
            android:layout_marginRight="20dp"
            android:textSize="17sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/butSignUp"
        android:layout_gravity="center"
        android:text="SIGN UP"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:longClickable="false"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:layout_below="@+id/inputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dip"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/butSignUp"
        android:paddingTop="0dp"
        android:paddingLeft="60dip"
        android:paddingRight="60dip"
        android:text="By registering for or using any portion of the Services, I accept the"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="5dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/termsofUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Use"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:linksClickable="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/info" />


</RelativeLayout>
