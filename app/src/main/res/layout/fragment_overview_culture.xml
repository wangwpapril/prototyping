<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:id="@+id/overview_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:scaleType="centerCrop" />

        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="16dp"
            android:layout_below="@+id/overview_image"
            android:background="@android:color/white">

            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overview_content"
                android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cultural Norms"
                android:id="@+id/destination_subtitle"
                android:layout_alignParentStart="false"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/section_icon"
                android:textColor="#333f48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/destination_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/destination_subtitle"
                android:layout_marginTop="10dp"
                android:textColor="#333f48" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/section_icon"
                android:layout_above="@+id/destination_content"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/destination_subtitle"
                android:src="@drawable/cultural_icon"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overview_content2"
            android:layout_below="@+id/overview_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ethnic Makeup"
                android:id="@+id/destination_subtitle2"
                android:layout_alignParentStart="false"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/section_icon2"
                android:textColor="#333f48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/destination_content2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/destination_subtitle2"
                android:layout_marginTop="10dp"
                android:textColor="#333f48" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/section_icon2"
                android:layout_above="@+id/destination_content2"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/destination_subtitle2"
                android:src="@drawable/ethnic_icon"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overview_content3"
            android:padding="16dp"
            android:layout_below="@+id/overview_content2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Language"
                android:id="@+id/destination_subtitle3"
                android:layout_alignParentStart="false"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/section_icon3"
                android:textColor="#333f48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/destination_content3"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/destination_subtitle3"
                android:layout_marginTop="10dp"
                android:textColor="#333f48" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/section_icon3"
                android:layout_above="@+id/destination_content3"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/destination_subtitle3"
                android:src="@drawable/language_icon"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/overview_content4"
                android:padding="16dp"
                android:layout_below="@+id/overview_content3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Religion"
                    android:id="@+id/destination_subtitle4"
                    android:layout_alignParentStart="false"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/section_icon4"
                    android:textColor="#333f48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/destination_content4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/destination_subtitle4"
                    android:layout_marginTop="10dp"
                    android:textColor="#333f48" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/section_icon4"
                    android:layout_above="@+id/destination_content4"
                    android:layout_alignParentEnd="false"
                    android:layout_alignTop="@+id/destination_subtitle4"
                    android:src="@drawable/religion_icon"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>
</LinearLayout>