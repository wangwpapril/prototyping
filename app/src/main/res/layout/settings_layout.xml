<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingTop="16dp"
        android:elevation="4dp"
        android:transitionName="actionBar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_below="@+id/toolbar"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp">


          <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firstNameText"
                android:layout_marginTop="20dp"
                android:text="First Name:"
                android:textColor="@color/white"
                android:textSize="17sp"
              android:layout_marginLeft="15dp" />

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/firstNameText"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:gravity="left"
            android:hint="FIRST NAME"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="#00000000"
            android:inputType="text"
            android:layout_marginLeft="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/firstNameText">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:background="@color/gray"
            android:layout_alignStart="@+id/firstNameEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/firstNameEditText"
            android:layout_marginRight="35dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastNameText"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/firstNameText"
                android:text="Last Name:"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginLeft="15dp" />


            <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@+id/lastNameText"
                android:layout_below="@+id/firstNameEditText"
            android:ems="10"
            android:gravity="left"
            android:textColorHint="@color/white"
            android:hint="LAST NAME"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="#00000000"
            android:inputType="text"
            android:layout_alignParentLeft="false"
            android:layout_alignStart="@+id/firstNameEditText"
            android:layout_alignParentTop="false"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium">

        </EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignStart="@+id/lastNameEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/lastNameEditText"
            android:layout_marginRight="35dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailText"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lastNameText"
                android:text="Email:"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginLeft="15dp" />


            <EditText
            android:id="@+id/emailEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
                android:layout_below="@+id/lastNameEditText"
                android:layout_alignStart="@+id/lastNameEditText"
            android:ems="20"
            android:gravity="left"
            android:hint="EMAIL"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="#00000000"
            android:inputType="textEmailAddress"
            android:layout_toEndOf="@+id/emailText"
            android:layout_alignParentTop="false"
             android:layout_marginRight="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignStart="@+id/emailEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/emailEditText"
            android:layout_marginRight="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNameText"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/emailText"
            android:text="Username:"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginLeft="15dp" />


        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/userNameText"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="left"
            android:hint="USERNAME"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="text"
            android:layout_alignParentLeft="false"
            android:layout_alignStart="@+id/emailEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/emailEditText"
            android:layout_marginRight="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_alignStart="@+id/userNameEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/userNameEditText"
            android:layout_marginRight="35dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oldPasswordText"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/userNameText"
            android:text="Old Password:"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginLeft="15dp" />


        <EditText
            android:id="@+id/oldPasswordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/oldPasswordText"
            android:ems="10"
            android:gravity="left"
            android:hint="(Optional)"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="textPassword"
            android:layout_alignParentLeft="false"
            android:layout_alignStart="@+id/userNameEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/userNameEditText"
            android:layout_marginRight="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_alignStart="@+id/oldPasswordEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/oldPasswordEditText"
            android:layout_marginRight="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newPasswordText"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/oldPasswordText"
            android:text="New Password:"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginLeft="15dp" />


        <EditText
            android:id="@+id/newPasswordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/newPasswordText"
            android:ems="10"
            android:gravity="left"
            android:hint="(Optional)"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="textPassword"
            android:layout_alignParentLeft="false"
            android:layout_alignStart="@+id/oldPasswordEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/oldPasswordEditText"
            android:layout_marginRight="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_alignParentLeft="false"
            android:layout_alignStart="@+id/newPasswordEditText"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/newPasswordEditText"
            android:layout_marginRight="35dp"
            android:textSize="17sp" />

       </RelativeLayout>



<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/buttonsection"
    android:layout_below="@+id/inputLayout"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/butUpdate"
        android:text="Update"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:longClickable="false"
        android:clickable="true"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:textAllCaps="false"
         />
    <TextView
        android:id="@+id/sign_out"
        android:layout_marginTop="25dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:text="Sign Out"
        android:textColor="#ececec"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/butUpdate"
        android:linksClickable="false" />
</RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="25dp"
        layout="@layout/drawer_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
    </include>

</RelativeLayout>
