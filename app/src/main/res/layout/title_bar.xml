<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/title_background"
    android:paddingLeft="@dimen/more_margin_left"
    android:paddingRight="@dimen/more_margin_right" >

    <LinearLayout
        android:id="@+id/btnTitleLeftLayout"
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:onClick="onBackClick"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/btnTitleLeft"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:scaleType="fitStart"
            android:src="@drawable/icon_titlebar_return" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtViewTitleCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/btnTitleRight"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_gravity="center|right"
            android:paddingBottom="2.5dip"
            android:paddingTop="2.5dip"
            android:scaleType="fitEnd"
            android:src="@drawable/search_title"
            android:visibility="gone" />


    </FrameLayout>

</RelativeLayout>