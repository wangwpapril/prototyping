<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
     >

    <FrameLayout
        android:id="@+id/profile_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        >

        <RelativeLayout
            android:id="@+id/number_and_opp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/opportunity_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opportunity_number"
                android:text="OPP."
                android:textColor="@android:color/holo_orange_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/avatar_and_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/profile_avatar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/photo"/>

            <TextView
                android:id="@+id/profile_address"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_avatar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toronto, On"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/location_and_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            >

            <ImageView
                android:id="@+id/profile_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_location"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/profile_distance"
                android:layout_below="@+id/profile_location_icon"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:text="20 km"
                android:textSize="20sp"/>

        </RelativeLayout>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/profile_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_top"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/profile_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Michelle Lee"
            android:textSize="22sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/profile_title"
            android:layout_below="@id/profile_user_name"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="Freelance Event Marketer"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_middle"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/profile_wishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/profile_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_wish_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_icon"/>

                <TextView
                    android:id="@+id/profile_wish_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_wish_icon"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="Wishes"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/profile_wish1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_wish"
                android:layout_marginLeft="22dp"
                android:text="Event Consultant"
                android:textColor="@color/deep_gray"
                android:textSize="20sp"
                 />

            <TextView
                android:id="@+id/profile_wish2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_wish1"
                android:layout_marginLeft="22dp"
                android:text="SEO Web"
                android:textColor="@color/deep_gray"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_wishes"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/profile_offering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_offer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_icon"/>

                <TextView
                    android:id="@+id/profile_offer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_wish_icon"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="Offering"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/profile_offer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_offering"
                android:layout_marginLeft="22dp"
                android:text="Business Consulting"
                android:textColor="@color/deep_gray"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/profile_offer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_offer1"
                android:layout_marginLeft="22dp"
                android:text="Yoga Instructor"
                android:textColor="@color/deep_gray"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/profile_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_offers"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"/>

            <TextView
                android:id="@+id/profile_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="437 890 1180"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_contact"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email_icon"/>

            <TextView
                android:id="@+id/profile_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="JenifferL@yahoo.com"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>