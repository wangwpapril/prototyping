<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >

    <RelativeLayout
        android:id="@+id/service_card_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp"
            android:elevation="2dp"
            card_view:cardCornerRadius="8dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/content_background"
                >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="php programmer"
                   android:textColor="@color/dark_blue"
                   android:textSize="18sp"
                   android:fontFamily="sans-serif"
                   />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/service_card_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp"
            android:elevation="2dp"
            card_view:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/content_background"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/service_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Service title"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/service_title_label"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    >
                    
                    <RelativeLayout
                        android:id="@+id/service_content_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/icon_container"
                            android:layout_marginBottom="15dp"
                            android:text="city, country"
                            android:textColor="@color/dark_blue"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif"
                            />

                        <LinearLayout
                            android:id="@+id/icon_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="25dp"
                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:src="@drawable/internship_b"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/internship_b"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/internship_b"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/internship_b"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/internship_b"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_toRightOf="@+id/service_content_container"
                        android:layout_weight="1"
                        />

                    <RelativeLayout
                        android:id="@+id/service_rate_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/divider"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        >

                        <TextView
                            android:id="@+id/hourly_rate_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hourly Rate"
                            android:textColor="@color/dark_blue"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            />

                        <TextView
                            android:id="@+id/hourly_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hourly_rate_label"
                            android:layout_marginLeft="10dp"
                            android:text="$20.00"
                            android:textColor="@color/dark_blue"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            />


                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>
