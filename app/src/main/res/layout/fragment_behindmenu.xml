<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/totalScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_user_bg" >

    <RelativeLayout
        android:id="@+id/viewGrpUserInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:paddingBottom="20dip"
        android:paddingTop="20dip" >

        <ImageView
            android:id="@+id/imgViewAvata"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/avata" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/imgViewAvata"
            android:ellipsize="end"
            android:maxWidth="100dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />

        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/enter_list" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listViewSlideMenu"
        style="@style/ListViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/viewGrpUserInfo"
        android:background="@drawable/transparent_background"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>