<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swishlabs.prototyping.fragment.MyProfileDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >

            <ImageView
                android:id="@+id/profile_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo"/>

            <RelativeLayout
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_avatar"
                >

                <RelativeLayout
                    android:id="@+id/first_name_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/first_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="First name:"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        />

                    <EditText
                        android:id="@+id/first_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/first_name_label"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/rounded_border_white"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/last_name_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_name_container"
                    >

                    <TextView
                        android:id="@+id/last_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Last name:"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        />

                    <EditText
                        android:id="@+id/last_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/last_name_label"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/rounded_border_white"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personal_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Personal statement:"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <TextView
                    android:id="@+id/statement_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="120"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

            </RelativeLayout>

            <EditText
                android:id="@+id/statement_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_statement"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_white"
                android:ems="120"
                android:lines="6"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                />

            <RelativeLayout
                android:id="@+id/email_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statement_input"
                >

                <TextView
                    android:id="@+id/email_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Email:"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/email_label"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rounded_border_white"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_container"
                >

                <TextView
                    android:id="@+id/phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Phone:"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <EditText
                    android:id="@+id/phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/phone_label"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rounded_border_white"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/job_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_container"
                >

                <TextView
                    android:id="@+id/job_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Job Title:"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <AutoCompleteTextView
                    android:id="@+id/job_title_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/job_title_label"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rounded_border_white"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    />

            </RelativeLayout>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_container"
                android:layout_marginTop="10dp"
                >

                <RadioButton
                    android:id="@+id/radio_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoText="true"
                    android:editable="true"
                    android:checked="true"
                    android:text="Company:"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <RadioButton
                    android:id="@+id/radio_self_employed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Self-Employed"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <RadioButton
                    android:id="@+id/radio_seeking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Seeking a position"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

                <RadioButton
                    android:id="@+id/radio_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Other"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    />

            </RadioGroup>

            <EditText
                android:id="@+id/company_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/radio_group"
                android:layout_alignTop="@+id/radio_group"
                android:background="@drawable/rounded_border_white"
                android:text="test"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                />

            <TextView
                android:id="@+id/skills_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_group"
                android:layout_marginTop="20dp"
                android:text="Skills:"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                />

        </RelativeLayout>
    </ScrollView>

 </RelativeLayout>
