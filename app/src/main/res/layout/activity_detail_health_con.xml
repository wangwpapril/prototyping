<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swishlabs.prototyping.activity.DetailHealthConActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        android:transitionName="actionBar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_titlebar_return"
            android:id="@+id/title_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textColor="#FFF"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/content"
            android:background="@android:color/white"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/overview_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Description"
                    android:id="@+id/destination_subtitle"
                    android:layout_alignParentStart="false"
                    android:layout_toRightOf="@+id/section_icon"
                    android:textColor="#333f48"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/destination_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/destination_subtitle"
                    android:layout_marginTop="10dp"
                    android:textColor="#333f48" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/section_icon"
                    android:layout_above="@+id/destination_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignTop="@+id/destination_subtitle"
                    android:src="@drawable/brand_icon"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/overview_content2"
                android:layout_below="@+id/overview_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Symptoms"
                    android:id="@+id/destination_subtitle2"
                    android:layout_alignParentStart="false"
                    android:layout_toRightOf="@+id/section_icon2"
                    android:textColor="#333f48"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/destination_content2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/destination_subtitle2"
                    android:layout_marginTop="10dp"
                    android:textColor="#333f48" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/section_icon2"
                    android:layout_above="@+id/destination_content2"
                    android:layout_alignParentEnd="false"
                    android:layout_alignTop="@+id/destination_subtitle2"
                    android:src="@drawable/side_effects_icon"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/overview_content3"
                android:padding="16dp"
                android:layout_below="@+id/overview_content2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Prevention/Treatment"
                    android:id="@+id/destination_subtitle3"
                    android:layout_alignParentStart="false"
                    android:layout_toRightOf="@+id/section_icon3"
                    android:textColor="#333f48"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/destination_content3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/destination_subtitle3"
                    android:layout_marginTop="10dp"
                    android:textColor="#333f48" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/section_icon3"
                    android:layout_above="@+id/destination_content3"
                    android:layout_alignParentEnd="false"
                    android:layout_alignTop="@+id/destination_subtitle3"
                    android:src="@drawable/notes_icon"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
