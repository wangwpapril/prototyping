<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.swishlabs.intrepid_android.activity.ViewDestinationActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        android:transitionName="actionBar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>





    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/content">
        <android.support.v4.view.ViewPager
            android:layout_height="fill_parent"
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <com.swishlabs.intrepid_android.customViews.CustomTabContainer
    android:layout_width="fill_parent"
    android:id="@+id/tabContainer"
    android:layout_below="@id/toolbar"
    android:layout_height="40dp"
    android:background="@android:color/transparent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:id="@+id/tabLayout"
        android:layout_height="fill_parent"
        android:background="@drawable/subnav_transparent_bg"></LinearLayout>
    <TextView
        android:layout_width="50dp"
        android:id="@+id/tabSelector"
        android:background="#fff"
        android:layout_marginTop="-3dp"
        android:layout_height="1dp"/>
</com.swishlabs.intrepid_android.customViews.CustomTabContainer>

    <include
        android:layout_width="match_parent"
        android:layout_height="25dp"
        layout="@layout/drawer_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
    </include>


</RelativeLayout>

