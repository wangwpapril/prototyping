<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <stroke android:width="1dp" android:color="#0098ed" />
            <corners android:radius="3dp" />
        </shape>

    </item>
    <item android:state_focused="false" android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <stroke android:width="1dp" android:color="#C0C0C0" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector> 